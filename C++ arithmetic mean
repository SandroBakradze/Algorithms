#include <iostream>
using namespace std;

int main ()
{
    cout << "Hi, this is a program for calculating the arithmetic mean of the elements in an array :)" <<endl;
    int n;
    cout << "Please, enter the number of elements in the array - ";
    cin >> n;
    cout << "Now enter the elements of this array - ";
    int a[n];
    for (int i=0; i < n; i++)
        cin >> a[i];

    int s = 0;
    for (int i=0; i < n; i++)
        s = s+ a[i];
        s = s/n;

    cout << "the sum of the items you entered = " << s;

    return 0;
}

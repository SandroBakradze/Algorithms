#include <iostream>
using namespace std;

int main ()
{
    cout << "Hi, This is a program to find the minimum and maximum numbers of an array :)" <<endl;
    int n;
    cout << "Please, enter the number of elements in the array - ";
    cin >> n;
    cout << "Now enter the elements of this array - ";
    int a[n];
    for (int i=0; i < n; i++)
        cin >> a[i];
    double min = a [0];
    double max = a [0];
    for (int i = 0; i < n; i++)
        if (a [i] < min)
        {
            min = a [i];
        }
        else if (a [i] > max)
        {
            max = a [i];
        }
        cout << "min = " << min <<endl;
        cout << "max = " << max <<endl;
    return 0;
}
